<Window x:Class="DNESaver.UI.OverviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DNESaver.UI"
        mc:Ignorable="d" DataContext="{Binding RelativeSource={RelativeSource Self}}"
        Title="Bloom &amp; Rage - Overview" Height="450" Width="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <TextBlock FontSize="20">Bloom &amp; Rage - Save Editor</TextBlock>
        <ScrollViewer Margin="5" Grid.Row="1" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
            <TextBox Background="Black" Foreground="LightGray" FontSize="16" Grid.Row="1" Margin="5" IsReadOnly="True" TextWrapping="Wrap" Text="{Binding Messages}"/>
        </ScrollViewer>
        <Button Click="OpenSaveLocation" Grid.Row="2" Margin="5" Padding="5" FontSize="16" HorizontalAlignment="Right">
            Open Save-game location
        </Button>
        <Button Click="OpenSgEditor" Grid.Row="2" Margin="5" Padding="5" FontSize="16" HorizontalAlignment="Left">
            Edit Savegame
        </Button>
    </Grid>
</Window>
