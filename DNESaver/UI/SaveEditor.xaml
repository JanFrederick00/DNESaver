<Window x:Class="DNESaver.UI.SaveEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DNESaver.UI"
        mc:Ignorable="d" DataContext="{Binding RelativeSource={RelativeSource Self}}"
        Title="SaveEditor" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <TabControl>
            <TabItem Header="Facts">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBox Grid.Row="0" Margin="2" FontSize="14" Padding="2" Name="search" TextChanged="search_TextChanged"/>
                    <ItemsControl ScrollViewer.CanContentScroll="True" VirtualizingPanel.ScrollUnit="Pixel" VirtualizingStackPanel.VirtualizationMode="Recycling" Grid.Row="1" ItemsSource="{Binding EditableFactsView}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <VirtualizingStackPanel />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.Template>
                            <ControlTemplate>
                                <ScrollViewer>
                                    <ItemsPresenter/>
                                </ScrollViewer>
                            </ControlTemplate>
                        </ItemsControl.Template>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#e0e0e0" Padding="5" Margin="10,5" BorderThickness="1" CornerRadius="8">
                                    <Grid ToolTip="{Binding ToolTip, Mode=OneWay}">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="auto"/>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="100"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="auto"/>
                                            <RowDefinition Height="auto"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>
                                        <CheckBox Grid.RowSpan="2" Grid.Column="3" VerticalAlignment="Center" IsChecked="{Binding ChangeValue}" >Change Value</CheckBox>
                                        <TextBlock Grid.Column="0" VerticalAlignment="Center" FontWeight="DemiBold" FontSize="14" Text="{Binding DispFactName, Mode=OneWay}"/>
                                        <TextBlock Grid.Column="0" Grid.Row="1" VerticalAlignment="Center" FontWeight="Light" FontSize="14" Text="{Binding DispLine2, Mode=OneWay}"/>
                                        <TextBlock Grid.Row="2" Grid.ColumnSpan="4" Text="{Binding TimelineString, Mode=OneWay}"  Margin="10,0,0,0"/>

                                        <TextBlock Grid.Column="1" Grid.RowSpan="2" HorizontalAlignment="Right" Margin="0,0,5,0" VerticalAlignment="Center">New Value:</TextBlock>

                                        <Grid  Grid.Column="2" Grid.RowSpan="2" HorizontalAlignment="Left" VerticalAlignment="Center">
                                            <TextBox Text="{Binding NewValueInt, UpdateSourceTrigger=PropertyChanged}" FontSize="14" Padding="2" MinWidth="40"/>
                                            <Grid.Style>
                                                <Style TargetType="Grid">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding FactDefinition.Type}" Value="IntFact">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Grid.Style>
                                        </Grid>
                                        <Grid Grid.Column="2" Grid.RowSpan="2" HorizontalAlignment="Left" VerticalAlignment="Center">
                                            <TextBox Text="{Binding NewValueFloat, UpdateSourceTrigger=PropertyChanged}" FontSize="14" Padding="2" MinWidth="40"/>
                                            <Grid.Style>
                                                <Style TargetType="Grid">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding FactDefinition.Type}" Value="FloatFact">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Grid.Style>
                                        </Grid>
                                        <Grid Grid.Column="2" Grid.RowSpan="2" HorizontalAlignment="Left" VerticalAlignment="Center">
                                            <ComboBox SelectedItem="{Binding NewValueBYTE}" ItemsSource="{Binding EnumValues}" MinWidth="55" FontSize="14"/>
                                            <Grid.Style>
                                                <Style TargetType="Grid">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding FactDefinition.Type}" Value="EnumFact">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding FactDefinition.Type}" Value="BoolFact">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Grid.Style>
                                        </Grid>

                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>
            </TabItem>
            <TabItem Header="Relationships">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <TextBlock TextWrapping="Wrap" Margin="5" FontSize="14">
                        Note: These Values define the character's relationships at the <Bold>Start</Bold> of each scene.<LineBreak/>
                        The Values do not automatically propagate to the next scenes (in collectible mode). <LineBreak/>
                        These values are not the ones used on the stats screen - those are encoded in the "facts" section.
                        <LineBreak/>
                        <LineBreak/>
                        "Level" seems to be the major component of the relationship value and probably correlates to the value seen on the splash screen.
                    </TextBlock>
                    <ItemsControl Grid.Row="1" ScrollViewer.CanContentScroll="True" VirtualizingPanel.ScrollUnit="Pixel" VirtualizingStackPanel.VirtualizationMode="Recycling"  ItemsSource="{Binding EditableScenes}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <VirtualizingStackPanel />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.Template>
                            <ControlTemplate>
                                <ScrollViewer>
                                    <ItemsPresenter/>
                                </ScrollViewer>
                            </ControlTemplate>
                        </ItemsControl.Template>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Margin="10,10,0,0">
                                    <TextBlock Text="{Binding SceneName}" FontSize="16" FontWeight="DemiBold"/>
                                    <TextBlock Text="{Binding SceneId}" FontWeight="Light" FontSize="14"/>
                                    <ItemsControl ItemsSource="{Binding Relationships}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <WrapPanel/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border CornerRadius="5" Padding="5" Background="LightGray" Margin="5">
                                                    <StackPanel>
                                                        <TextBlock Text="{Binding name}" FontSize="14" FontWeight="DemiBold"/>
                                                        <TextBlock FontSize="14" Margin="10,0">
                                                            Level: 
                                                            <InlineUIContainer>
                                                                <TextBox FontSize="14" Padding="10,0" Text="{Binding level, UpdateSourceTrigger=PropertyChanged}"/>
                                                            </InlineUIContainer>
                                                        </TextBlock>
                                                        <TextBlock FontSize="14" Margin="10,0">
                                                            Growth: 
                                                            <InlineUIContainer>
                                                                <TextBox FontSize="14" Padding="10,0" Text="{Binding growth, UpdateSourceTrigger=PropertyChanged}"/>
                                                            </InlineUIContainer>
                                                        </TextBlock>
                                                        <TextBlock FontSize="14" Margin="10,0">
                                                            Growth Changes: 
                                                            <InlineUIContainer>
                                                                <TextBox FontSize="14" Padding="10,0" Text="{Binding growthChanges, UpdateSourceTrigger=PropertyChanged}"/>
                                                            </InlineUIContainer>
                                                        </TextBlock>
                                                        <TextBlock FontSize="14" Margin="10,0">
                                                            Decay: 
                                                            <InlineUIContainer>
                                                                <TextBox FontSize="14" Padding="10,0" Text="{Binding decay, UpdateSourceTrigger=PropertyChanged}"/>
                                                            </InlineUIContainer>
                                                        </TextBlock>
                                                        <TextBlock FontSize="14" Margin="10,0">
                                                            DecayChanges: 
                                                            <InlineUIContainer>
                                                                <TextBox FontSize="14" Padding="10,0" Text="{Binding decayChanges, UpdateSourceTrigger=PropertyChanged}"/>
                                                            </InlineUIContainer>
                                                        </TextBlock>
                                                    </StackPanel>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>
            </TabItem>
        </TabControl>
        <Button Grid.Row="1" Margin="5" FontSize="14" HorizontalAlignment="Right" Padding="5,2" Click="SaveAndClose">
            Save &amp; Close
        </Button>
    </Grid>
</Window>
